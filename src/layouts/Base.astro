---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = 'New Frame Studio | Web Design for Startups & Small Businesses',
  description = 'Custom web design and branding that converts. I help startups and small businesses look as good as they perform.',
  lang = 'en',
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preconnect to font servers -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts: Geist Mono + Instrument Serif -->
    <link
      href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@400;500;700&family=Instrument+Serif:ital@0;1&display=swap"
      rel="stylesheet"
    />

    <!-- Unicorn Studio SDK -->
    <script is:inline src="https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v2.0.5/dist/unicornStudio.umd.js"></script>

    <!-- View Transitions -->
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>
