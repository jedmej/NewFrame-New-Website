---
// If we can't run client-side JS (e.g. bots, curl), fall back to /en/
const preferredLang = 'en';
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex, follow" />
    <link rel="canonical" href="https://newframe.studio/en/" />
    <script is:inline>
      var lang = localStorage.getItem('preferred-lang');
      if (lang !== 'en' && lang !== 'pl') lang = 'en';
      window.location.replace('/' + lang + '/');
    </script>
    <meta http-equiv="refresh" content={`0;url=/${preferredLang}/`} />
  </head>
  <body></body>
</html>
